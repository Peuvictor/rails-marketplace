<div class="row">
  <% @shirts.each do |shirt| %>
    <div class="col-md-4">
      <div class="card mb-2">
        <% if shirt.photos.attached? %>
          <% shirt.photos.each do |photo| %>
            <%= image_tag url_for(photo), height: 180, width: 180, crop: :fill %>
          <% end %>
        <% else %>
          <%= image_tag 'default-foto.jpg', height: 180, width: 180, crop: :fill %>
        <% end %>
      <h4><%= shirt.name %> - <%= shirt.year %></h4>
      <p><%= link_to "See more", shirt %></p>
      </div>
    </div>
  <% end %>
</div>
