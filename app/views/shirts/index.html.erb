<p style="color: green"><%= notice %></p>

<%= form_with url: shirts_path, method: :get, local: true do |form| %>
  <div class="form-group">
    <%= form.text_field :query, value: params[:query], placeholder: "Search for a shirt", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.select :country, options_for_select(["All Countries", "Brasil", "Espanha", "Inglaterra", "Italia", "Other Countries"], params[:country]), prompt: "Select Country", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.select :size, options_for_select(["All Sizes", "PP", "P", "M", "G", "GG"], params[:size]), prompt: "Select Size", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.select :team, options_for_select(["All Teams", "Cruzeiro", "Flamengo", "Vasco", "Corinthians", "Barcelona", "Real Madrid", "Manchester", "Juventus", "Other Teams"], params[:team]), prompt: "Select Team", class: "form-control" %>
  </div>
  <%= form.submit "Search", class: "btn btn-primary" %>
<% end %>

<div class="Homepage">
  <h2>Shop now</h2>
  <%= render 'list', shirts: @shirts %>
  <%= link_to "Insert new shirt", new_shirt_path, class: "btn btn-primary" %>
  <% if current_user %>
    <%= link_to "View My Profile", user_path(current_user.id) %>
  <% end %>
</div>
