<p style="color: green"><%= notice %></p>

<div class="Homepage">
  <%= form_with url: shirts_path, method: :get, local: true do |form| %>
    <div class="form-group">
      <%= form.select :country, options_for_select(["All Countries", "Brasil", "Other Countries"], params[:country]), prompt: "Select Country", class: "form-control" %>
    </div>
    <%= form.submit "Search", class: "btn btn-primary" %>
  <% end %>

  <%= render 'list', shirts: @shirts %>
  <%= link_to "Insert new shirt", new_shirt_path, class: "btn btn-primary" %>
</div>
