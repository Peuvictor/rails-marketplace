<p style="color: green"><%= notice %></p>

<%= form_with url: shirts_path, method: :get, local: true do %>
  <%= text_field_tag :query, params[:query], placeholder: "Al Hilal" %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>


<div class="Homepage">
  <h2>Shop now</h2>
  <%= render 'list', shirts: @shirts %>
</div>

<%= link_to "Insert new shirt", new_shirt_path, class: "btn btn-primary" %>
