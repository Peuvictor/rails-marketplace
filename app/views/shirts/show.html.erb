<p style="color: green"><%= notice %></p>

<% if @shirt %>
  <%= render partial: 'shirt', locals: { shirt: @shirt } %>

  <% if @shirt.photos.attached? %>
    <% @shirt.photos.each do |photo| %>
      <%= image_tag url_for(photo), height: 360, width: 360, crop: :fill %>
    <% end %>
  <% end %>

  <!-- Buy button -->
  <%= link_to "Buy", checkout_orders_path(shirt_id: @shirt.id), class: "btn btn-primary" %><br><br>

  <% if current_user == @shirt.user %>
    <!-- Edit shirt link -->
    <%= link_to "Edit this shirt", edit_shirt_path(@shirt), class: "btn btn-secondary" %><br><br>

    <!-- Delete shirt button -->
    <%= button_to "Delete this shirt", @shirt, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %><br><br>
  <% end %>

<% else %>
  <p>Shirt not found</p>
<% end %>

<!-- Link to go back to shirts list -->
<%= link_to "Back to shirts", shirts_path, class: "btn btn-info" %>
